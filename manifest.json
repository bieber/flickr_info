{
	"manifest_version": 2,

	"name": "Flickr Info",
	"description": "Flickr image info fetcher",
	"version": "1.0",

	"icons": {
		"128": "icon_128.png"
	},

	"browser_action": {
		"default_icon": "icon_19.png",
		"default_title": "Flickr Info",
		"default_popup": "popup.html"
	},

	"content_scripts": [
		{
			"matches": ["https://www.flickr.com/photos/*/*"],
			"js": ["storage_promise.js", "page.js"]
		}
	],

	"web_accessible_resources": [
		"icon_*"
	],

	"permissions": [
		"storage"
	]
}
